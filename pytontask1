import random

def hangman():
   
    words = ["python", "java", "coding", "openai", "developer"]
    secret_word = random.choice(words)
    guessed_letters = []
    incorrect_guesses = 0
    max_incorrect_guesses = 6

    print("Welcome to Hangman! ")
    print("I'm thinking of a word. Try to guess it letter by letter.")
    print(display_word(secret_word, guessed_letters))

    while incorrect_guesses < max_incorrect_guesses:
        guess = input("Guess a letter: ").lower()

       
        if not guess.isalpha() or len(guess) != 1:
            print("Invalid input. Please enter a single letter.")
            continue

        if guess in guessed_letters:
            print(f"You've already guessed '{guess}'. Try a different letter.")
            continue

        guessed_letters.append(guess)

        if guess in secret_word:
            print(f"Good guess! '{guess}' is in the word.")
        else:
            incorrect_guesses += 1
            print(f"Sorry, '{guess}' is not in the word. You have {max_incorrect_guesses - incorrect_guesses} incorrect guesses left.")

        current_display = display_word(secret_word, guessed_letters)
        print(current_display)

        if "_" not in current_display:
            print("\nCongratulations! You guessed the word! ")
            print(f"The word was: {secret_word}")
            break
    else:
        print("\nGame Over! You ran out of guesses.")
        print(f"The word was: {secret_word}")

def display_word(word, guessed_letters):
    """
    Displays the word with unguessed letters replaced by underscores.
    """
    displayed = ""
    for letter in word:
        if letter in guessed_letters:
            displayed += letter + " "
        else:
            displayed += "_ "
    return displayed.strip()


if name == "main":
    hangman()
